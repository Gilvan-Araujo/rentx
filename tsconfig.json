{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "CommonJS",
        "baseUrl": "./src",
        "rootDir": "./",
        "paths": {
            "@/modules/*": [
                "./modules/*"
            ],
            "@/utils/*": [
                "./utils/*"
            ],
            "@/errors/*": [
                "./errors/*"
            ],
            "@/config/*": [
                "./config/*"
            ],
            "@/shared/*": [
                "./shared/*"
            ]
        },
        "resolveJsonModule": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true
    }
}